{
  "name": "yazi-vscode",
  "displayName": "Yazi VSCode",
  "description": "Native integration of Yazi directly in a VSCode window",
  "version": "1.0.7",
  "publisher": "dautroc",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dautroc/yazi-vscode"
  },
  "icon": "assets/logo.webp",
  "categories": [],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "yazi-vscode.toggle",
        "title": "Yazi: Toggle"
      }
    ],
    "keybindings": [
      {
        "command": "yazi-vscode.toggle",
        "key": "ctrl+shift+y",
        "mac": "cmd+shift+y"
      }
    ],
    "configuration": {
      "title": "Yazi",
      "properties": {
        "yazi-vscode.yaziPath": {
          "type": "string",
          "description": "The path to the yazi executable",
          "scope": "machine"
        },
        "yazi-vscode.configPath": {
          "type": "string",
          "default": "",
          "description": "Path to a custom Yazi config file (otherwise use default)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
